<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="103dp"
        android:layout_height="30dp"
        android:background="@drawable/corner_5_solid_ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="9dp"
            android:layout_height="11dp"
            android:src="@mipmap/dingwei_lan" />

        <TextView
            android:id="@+id/tv_located_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="北京"
            android:textColor="#3A8EFF"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="103dp"
        android:layout_height="30dp"
        android:layout_marginLeft="24dp"
        android:background="@drawable/corner_5_solid_ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_chognxindingwei"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@mipmap/icon_shuaxin" />

        <TextView
            android:id="@+id/tv_chognxindingwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  重新定位"
            android:textColor="#333333"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>

