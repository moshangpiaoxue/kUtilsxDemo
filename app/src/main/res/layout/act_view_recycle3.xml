<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_pull_zhong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_marginLeft="10dp"
            android:text="    加载中   " />
        <TextView
            android:id="@+id/tv_rv_kong"
            android:layout_width="wrap_content"
            android:onClick="onClick"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="   空   " />
        <TextView
            android:id="@+id/tv_rv_cuo"
            android:layout_width="wrap_content"
            android:onClick="onClick"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="   错   " />

        <TextView
            android:id="@+id/tv_rv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:onClick="onClick"
            android:text="   加   " />

        <TextView
            android:id="@+id/tv_pull_hao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_marginLeft="10dp"
            android:text="    好了   " />
        <TextView
            android:id="@+id/tv_pull_tou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_marginLeft="10dp"
            android:text="    头   " />
        <TextView
            android:id="@+id/tv_pull_wei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_marginLeft="10dp"
            android:text="    尾   " />
    </LinearLayout>


        <com.mo.libsx.view.recycle_view.KRecycleView
            android:id="@+id/krv_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


</LinearLayout>